#!/bin/sh

cache_file_path="/tmp/pen-$(printf -- "%s\n" "$@" | tr '\n' ' ' | sed 's/ $//' | slugify).txt"

# ci means "cache it"

while [ $# -gt 0 ]; do opt="$1"; case "$opt" in
    "") { shift; }; ;;
    -a) {
        asynchronous=y
        shift
    }
    ;;

    -f) {
        force_on=y
        shift
    }
    ;;

    *) break;
esac; done

if test "$force_on" = y || test "$PEN_CACHE" = "y"; then
    if test -f "$cache_file_path"; then
        cat "$cache_file_path"
    else
        if test "$asynchronous" = "y"; then
            "$@" > "$cache_file_path" &
        else
            "$@" > "$cache_file_path"
        fi
    fi
else
    "$@"
fi
