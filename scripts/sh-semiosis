#!/bin/bash
export TTY

# exec 1> >(pen-mnm)

# I should turn this entire script into an elisp hydra.
# Although that would require that emacs has been started already.

# g  sh-semiosis-go
# r  sh-semiosis-rc
# F  sh-semiosis-files
# I  semiosis-get-issue-description
# w  list-wiki-files-below $MYGIT/fortescue-autonomy
# J  semiosis jargon

read -r -d '' options <<HEREDOC
.  EDIT
G  glossary.txt
o  zcd semiosis
d  sh-semiosis-dir
e  sh-semiosis-exec
HEREDOC

echo "$0" | udl | pen-hls green
echo "$options" | pen-mnm | pen-hls dgrey

read -n1 d; test "$d" = "" && read -n1 d
# clear


    # w) cmd="list-wiki-files-below $MYGIT/fortescue-autonomy" ;;
    # g) cmd="sh-semiosis-go" ;;
    # r) cmd="sh-semiosis-rc" ;;
    # F) cmd="sh-semiosis-files" ;;
    # I) cmd="semiosis-get-issue-description" ;;
    # J) cmd="vs $NOTES/ws/semiosis/jargon.txt" ;;

case "$d" in
    .) cmd="v $0" ;;
    G) cmd="vs $HOME/notes/ws/semiosis/glossary.txt" ;;
    o) cmd="zcd $NOTES/ws/semiosis" ;;
    d) cmd="sh-semiosis-dir" ;;
    e) cmd="sh-semiosis-exec" ;;
esac
echo
echo "$cmd" | pen-hls nearblack

# exec <`tm-tty`
# exec 1> /dev/tty
eval "$cmd"
