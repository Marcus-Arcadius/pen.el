#!/bin/bash
export TTY

while [ $# -gt 0 ]; do opt="$1"; case "$opt" in
    "") { shift; }; ;;
    -e) {
        USE_EMACS=y
        shift
    }
    ;;

    -wintype) {
        WINTYPE="$2"
        shift
        shift
    }
    ;;

    *) break;
esac; done
: "${WINTYPE:="sps"}"

vipe_cmd="$1"
# eipe
: "${vipe_cmd:="vipe"}"
if test "$USE_EMACS" = "y"; then
    export WINTYPE
    pen-teipe "$@"
else
    pen-tm vipe -wintype "$WINTYPE" "$@"
fi
