#!/bin/bash
export TTY

export EDITOR=sps-v-keep

if ! inside-docker-p; then
    pen sh hdc "$@"
    exit "$?"
fi

if ! inside-tmux-p; then
    in-tm hdc "$@"
    exit "$?"
fi

thing="$@"

if test -n "$thing"; then
    pen-x -allowtm -sh /root/.cabal/bin/hdc -e ">" -s "$thing" -c m -i
else
    CMD="$(cmd "$@")"
    : ${CMD:="$(cmd "$@")"}

    eval "/root/.cabal/bin/hdc $CMD"
fi
