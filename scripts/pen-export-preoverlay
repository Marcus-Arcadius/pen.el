#!/bin/bash
export TTY

# Simply export stdin as the overlay, for another command

IFS= read -rd '' PEN_PREOVERLAY < <(cat);typeset -p PEN_PREOVERLAY &>/dev/null
export PEN_PREOVERLAY

"$@"


