#!/bin/bash
export TTY

# channel v1.0
# - Run a chatbot that sees only a terminal (program independent)
#   - The chatbot may have multiple personalities. i.e. a Mad-Hatter's Tea-Party
# channel v2.0
# - Give an AGI control of a terminal

# http://github.com/mullikine/channel/blob/master/README.md

while [ $# -gt 0 ]; do opt="$1"; case "$opt" in
    "") { shift; }; ;;
    -who) {
        who="$2"
        shift
        shift
    }
    ;;

    -on-behalf-of) {
        on_behalf_of="$2"
        shift
        shift
    }
    ;;

    *) break;
esac; done