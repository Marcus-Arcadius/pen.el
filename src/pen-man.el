(defun man-page-p (args)
  (sn-true (concat "/usr/bin/man " args)))

(defun man-thing-at-point ()
  (interactive)
  (let ((query ;; (concat "3 " (pen-thing-at-point))
         (concat (pen-thing-at-point))))
    (deactivate-mark)
    (if (man-page-p query)
        (man query)
      (error "page does not exist"))))

